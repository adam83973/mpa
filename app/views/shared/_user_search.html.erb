<form>
  <%= form_tag users_path, :method => 'get', :id => "users_search", class: "form-search" do %>
    <%= text_field_tag :search, params[:search], class: "input-medium search-query" %>
    <%= button_tag(type: "submit", class: "m-btn blue", style: "padding:8px 14px 8px 14px;") do %>
      <i class="icon-search icon-white"></i>
    <% end %>
  <% end %>
</form>
