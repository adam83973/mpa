<%= link_to note.notable do %>
  <div class="well well-sm">
    <div style="padding:7px 10px 0 10px;">
      <p>
        "<%= note.content %>"
          <div class="text-right">
            <%= link_to "Edit", edit_note_path(note), class: "btn btn-xs btn-default" if Time.now - 1.day < note.created_at && current_user.admin? %>
            <%= link_to 'Delete', note, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" if current_user.admin? && Time.now - 1.day < note.created_at %>
          </div>
       </p>
      <hr style="margin:0 0 10px 0;">
      <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
          <% if note.action_date && (note.action_date <= Date.today) && !note.completed %>
            <div class="checkbox" style="margin:0;">
              <label style="padding-left:0;">
                <%= check_box_tag "complete", "#{note.id}" %> Completed
              </label>
            </div>
          <% elsif note.action_date && note.action_date > Date.today %>
            <span> <i data-toggle="tooltip" data-placement="right" title="Action Date: <%= note.action_date.strftime("%D") %>" class="fa fa-clock-o"></i> </span>
          <% else %>
          <% end %>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
          <div class="text-right">
            <%= note.user.full_name%> (<%= note.created_at.strftime("%D")%>)
          </div>
        </div>
      </div>
      <div class="row text-center">
        <%= link_to "javascript:void(0)", class: "note_info_toggle" do %>
          <i class="fa fa-angle-double-down fa-1x"></i>
        <% end %>
      </div>
    </div> <!-- adds padding to note -->
    <div class="note_info">
      <div class="row">
        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
          <div class="text-center">
            <%= link_to note.notable.full_name, note.notable %>
          </div>
        </div>
        <div class="col-lg-7 col-md-7 col-sm-7 col-xs-7">
          <div class="text-center">
            <%=  mail_to(note.notable.user.email)  if note.notable.class.name == "Student" %>
            <%= mail_to(note.notable.email) if note.notable.class.name == "User" || note.notable.class.name == "Lead" %>
          </div>
        </div>
      </div><!-- /.row -->
      <div class="row">
        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
          <div class="text-center">
            <%= note.notable.class.name %>
          </div>
        </div>
        <div class="col-lg-7 col-md-7 col-sm-7 col-xs-7">
          <div class="text-center">
            <%= note.notable.user.phone if note.notable.class.name == "Student" %>
            <%= note.notable.phone if note.notable.class.name == "User" || note.notable.class.name == "Lead" %>
          </div>
        </div>
      </div><!-- /.row -->
    </div>
  </div>
<% end %>