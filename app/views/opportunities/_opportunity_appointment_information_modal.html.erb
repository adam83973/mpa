<div class="modal fade" data-backdrop="static" data-keyboard="false" id="oppAppointmentInformationModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Add Appointment Date</h4>
      </div>
      <div class="modal-body">
        <%= simple_form_for(@opportunity) do |f| %>
          <div class="row">
            <div class="col-sm-12">
              <%= f.error_notification %>
                <%= f.input :appointment_date, as: :string, input_html: { class: "datepicker"} %>
                <%= f.button :submit, class: "pull-right btn btn-lg btn-success" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>