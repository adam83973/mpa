<%= simple_form_for(@opportunity) do |f| %>
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <%= f.error_notification %>
      <%= f.input :title, input_html: { id: "oppotunity_title" }, placeholder: "Type a short description of this opportunity." %>
        <%= f.label "Interest Level:" %>
        <div class="text-center">
          <%= f.input :interest_level, as: :radio_buttons, item_wrapper_class: 'radio-inline', label: false, collection: Opportunity::INTEREST_LEVELS.zip((0..2).to_a) %>
        </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
        <%= f.association :location, label_method: :name %>
        <%= f.association :user, collection: User.where(:role => "Parent").order('last_name asc'), label_method: :full_name, input_html: { class: "chosen" } unless params[:user_id] %>
        <%= f.association :user, collection: User.where(:role => "Parent").order('last_name asc'), label_method: :full_name, input_html: { class: "chosen" }, selected: params[:user_id] if params[:user_id] %>
        <%= f.input :parent_name unless params[:user_id] %>
        <%= f.input :parent_phone unless params[:user_id] %>
        <%= f.input :parent_email unless params[:user_id] %>
        <%= f.association :student, label_method: :full_name, selected: params[:student_id], label: "Add to student account", input_html: { class: 'chosen' } if params[:student_id] %>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
        <%= f.input :student_name unless params[:student_id] %>
        <%= f.association :student, label_method: :full_name, label: "Add to student account", input_html: { class: 'chosen' } unless params[:student_id] %>
        <%= f.association :course, label_method: :course_name, input_html: { class: 'chosen' } %>
        <%= f.association :offering, label_method: :offering_name, collection: Offering.order(:course_id).includes(:course, :location).where("active = ?", true), input_html: { class: 'chosen' } %>
        <%= f.association :admin, as: :hidden, label_method: :full_name, selected: current_user.id, collection: User.where("admin = ?", true), input_html: { class: 'chosen' } %>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
        <%= f.input :status, collection: Opportunity::STATUSES.zip((0..8).to_a) %>
        <%= f.input :appointment_date, as: :string, input_html: { class: "datepicker"} %>
        <%= f.input :trial_date, as: :string, input_html: { class: "datepicker"} %>
        <%= f.input :possible_restart_date, as: :string, input_html: { class: "datepicker"} %>
        <%= f.input :source, collection: Opportunity::SOURCES.zip((0..7).to_a) %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <%= f.button :submit, class: "pull-right btn btn-lg btn-success" %>
    </div>
  </div>
<% end %>
