<div class="row">
  <div class="col-lg-6 col-md-6 col-sm-12 cl-xs-12">
    <h2>Opportunity: <%= @opportunity.title %></h2>
    <%= opportunity_status(@opportunity).html_safe %>
  </div>
  <div class="col-lg-6 col-md-6 col-sm-12 cl-xs-12">
    <%= link_to "Edit", edit_opportunity_path(@opportunity), class: "btn btn-default pull-right" %>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-lg-6 col-md-6 col-sm-12 cl-xs-12">
    <%= render 'opportunity_student_information' %>

    <%= render 'opportunity_parent_information' %>

    <%= render 'opportunity_class_information' %>
  </div>
  <div class="col-lg-6 col-md-6 col-sm-12 cl-xs-12">
    <%= render 'opportunity_note_management' %>
  </div>
</div>

<%= render 'opportunity_student_information_modal' %>

<%= render 'opportunity_class_information_modal' %>

<div class="modal fade" id="oppTrialInformationModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Add Trial Date</h4>
      </div>
      <div class="modal-body">
        <%= simple_form_for(@opportunity) do |f| %>
          <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <%= f.error_notification %>
                <%= f.association :course, label_method: :course_name, input_html: { class: 'chosen' } %>
                <%= f.association :offering, label_method: :offering_name, collection: Offering.includes(:course, :location).where("active = ?", true).all(order: 'course_id'), input_html: { class: 'chosen' } %>
                <%= f.button :submit, class: "pull-right btn btn-lg btn-success" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>