<% title "Find Lessons" %>

<h1><%= yield(:title)%></h1>

<% if current_user.admin?%>
<p>
  Download:
  <%= link_to "CSV", lessons_path(format: "csv") %>
</p>
<p>
  <%= link_to 'New Lesson', new_lesson_path, class: "btn btn-success" %>
</p>
<% end %>

<table id="datatable" class="display">
  <thead>
        <tr>
          <th>Name</th>
          <th>Week</th>
          <th>Course</th>
          <th>Status</th>
          <th></th>
          <th></th>
        </tr>
  </thead>
  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= link_to lesson.name, lesson, target: '_blank' %></td>
        <td><%= lesson.week %></td>
        <td><%= lesson.course.course_name if lesson.standard %></td>
        <td><%= lesson_status(lesson) %></td>
        <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
        <td><%= link_to 'View', lesson %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if signed_in? && current_user.admin? %>
<h3> Import Lessons</h3>
  <%= form_tag import_lessons_path, multipart: true do %>
    <%= file_field_tag :file %>
    <br>
    <%= submit_tag "Import", class: "btn btn-default" %>
  <% end %>
<% end %>
