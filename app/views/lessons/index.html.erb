<h1>Listing lessons</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Week</th>
    <th>Course</th>
    <th>Assignment</th>
    <th>Assignment key</th>
    <th>Assesment</th>
    <th>Assesment key</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lessons.each do |lesson| %>
  <tr>
    <td><%= lesson.name %></td>
    <td><%= lesson.week %></td>
    <td><%= lesson.course_id %></td>
    <td><%= lesson.assignment %></td>
    <td><%= lesson.assignment_key %></td>
    <td><%= lesson.assesment %></td>
    <td><%= lesson.assesment_key %></td>
    <td><%= link_to 'Show', lesson %></td>
    <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
    <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

