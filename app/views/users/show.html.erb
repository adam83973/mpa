<p>
  <b>First name:</b>
  <%= @user.first_name %>
</p>
<p>
  <b>Last name:</b>
  <%= @user.last_name %>
</p>
<p>
  <b>Role:</b>
  <%= @user.role %>
</p>

<!-- displays each student for user -->
<% if @user.role  == "Parent" %>
  
    <b><%= "Student".pluralize(@user.students.count) %>/offering:</b>
    <p>
    <% @user.students.each do |student| %>
      <h4> <%= link_to student.full_name, student %></h4> 
      <% student.offerings.each do |offering| %>
      <p><%= link_to offering.offering_name, offering %></p>
    <% end %>
    </p>
    <% end %>
  
<% end %>
<p>
  <b>Email:</b>
  <%= @user.email %>
</p>
<p>
  <b>Phone:</b>
  <%= @user.phone %>
</p>
<p>
  <b>Passion:</b>
  <%= @user.passion %>
</p>
<p>
  <b>Shirt size:</b>
  <%= @user.shirt_size %>
</p>
<p>
  <b>Has key:</b>
  <%= @user.has_key %>
</p>
<p>
  <b>Location:</b>
  <%= @user.location.name %>
</p>
<% if @user.role  == "Parent" %>
<p>
  <b>Admin:</b>
  <%= @user.admin %>
</p>
<% end %>
<p>
  <b>Active:</b>
  <%= @user.active %>
</p>


<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
