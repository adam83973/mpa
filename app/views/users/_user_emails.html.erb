<div class="card card-default">
  <div class="card-header">
    <h3 style="display:inline;" class="card-title">Emails</h3>
  </div>
  <div class="card-block">
    <table class="table table-striped table-sm table-bordered">
      <thead>
        <tr>
          <th>Sent</th>
          <th>Subject</th>
          <th>Opened</th>
          <th>View</th>
        </tr>
      </thead>
      <tbody>
        <% @user.emails.each do |email| %>
        <tr>
          <td>
            <%= email.sent_at.strftime("%m/%d/%Y") if email.sent_at %>
          </td>
          <td style="max-width: 100px;
                     overflow: hidden;
                     text-overflow: ellipsis;
                     white-space: nowrap;">
            <%= email.subject %>
          </td>
          <td>
            <%= email.opened_at ? email.opened_at.strftime("%m/%d/%Y") : "Not yet." %>
          </td>
          <td>
            <%= link_to "view", view_email_path(token: email.token, id: @user.id) %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
