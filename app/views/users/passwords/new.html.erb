<div class="row login-page">
  <div class="col-md-4 offset-md-4">
    <div class="card">
      <div class="card-header">
        <h3 class="mb-0 text-center">Forgot your password?</h3>
      </div>
      <div class="card-block">
        <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
          <%= f.error_notification %>
          <%= f.input :email, wrapper: :vertical_input_group do %>
            <span class="input-group-addon" id="basic-addon1"><i class="fa fa-envelope"></i></span>
            <%= f.input_field :email, :required => false, :autofocus => true, class: "form-control" %>
          <% end %>
          <div class="form-actions">
            <%= f.button :submit, "Send Reset Instructions", class: "btn btn-secondary pull-right" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
