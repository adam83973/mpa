<% title "Sign In" %>
<h2>Sign In</h2>

<div class="row">
  <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
    <%= simple_form_for(resource, :as => resource_name, :url => user_session_path) do |f| %>
      <%= f.input :email, :required => false, :autofocus => true %>
      <%= f.input :password, :required => false %>
      <%= f.input_field :remember_me, as: :boolean, inline_label: 'Remember me' if devise_mapping.rememberable? %>

      <%= f.button :submit, "Sign In", class: "btn btn-success mt-3 mb-4" %>
      
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>
