<h2>Sign Up!</h2>
<h4>If you're a parent, please notify us when you've enrolled and we'll attach your student(s) to your account.</h4>
<%= simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :invitation_token %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.association :location, label_method: :name %>
  <%= f.input :role, collection: ["Teacher", "Teaching Assistant", "Parent"] %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>

  <%= f.submit t("devise.invitations.edit.submit_button") %>
<% end %>
