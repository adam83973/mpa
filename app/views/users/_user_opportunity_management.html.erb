<div class="card card-default mb-3">
  <div class="card-header">
    <h3 style="display:inline;" class="card-title">Active Opportunities</h3>
  </div>
  <div class="card-block">
    <!-- displays each opportunity for user -->
    <% @parent_opportunities.where(status: 0..6).each_with_index do |opp, i| %>
      <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
          <%= opp.student ? (link_to opp.student.full_name, opp.student) : opp.student_name %>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
          <%= render '/shared/opportunity_card', opportunity: opp %>
        </div>
      </div>
      <%= "<hr>".html_safe if i + 1 != @parent_opportunities.count %>
    <% end %>
  </div>
</div>
