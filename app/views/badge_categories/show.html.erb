<%= link_to "Edit", edit_badge_category_path(@badge_category), class: "btn btn-default pull-right" if current_user.admin? %>
<% badges_count = @badge_category.badges.count %>
<h1>
  <%= @badge_category.name %> <%= 'Badge'.pluralize(badges_count) %>
</h1>
<hr style='margin-bottom:30px;'>
<% @badge_category.badges.each_with_index do |badge, i| %>
  <% if i % 2 == 0 %>
    <div class="row">
  <% end %>
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <%= render 'badges/badge_card', b: badge %>
    </div>
  <% if i % 2 == 1 || i+1 == badges_count %>
    </div>
  <% end %>
<% end %>
