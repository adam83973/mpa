<h1>Listing Badge Categories</h1>
<hr style="padding-bottom:20px;">

<% @badge_categories.each do |badge_category| %>
  <div class="row text-center">
    <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12 col-lg-offset-1 col-md-offset-1">
      <%= link_to badge_category, target: '_blank' do %>
        <div class="well well-sm badge_card">
          <div id="badge_<%= badge_category.id %>" class="row">
            <div class="col-lg-12 col-md-9 col-sm-12 col-xs-12 text-center" style="
                        position: relative;height:100px;">
              <div style="position: absolute;
                          top: 50%;
                          left: 50%;
                          -webkit-transform: translate(-50%, -50%);
                          transform: translate(-50%, -50%); ">
                <h1><%= badge_category.name %></h1>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<br />

<%= link_to 'New Badge category', new_badge_category_path %>
