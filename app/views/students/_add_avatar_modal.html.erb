<div class="modal fade" id="addAvatarModal" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="newStudentUserModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Add an avatar to your profile!</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <%= simple_form_for @student do |f| %>
              <%= f.association :avatar, label_method: :name, input_html: { class: "color" } %>
              <%= f.input :avatar_background_color, collection: [["Pink","#E98EB7"],["Blue","#8FC0E9"],["Green","#D3EA91"]] %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-right">
              <button type="button" class="btn btn-lg btn-danger" data-dismiss="modal">Cancel</button>
              <%= f.submit "Submit", class: "btn btn-lg btn-success" %>
            <% end %>
          </div>
        </div>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->