<div class="well well-sm" style="padding:0 0 0 0;">
	<div style="padding:5px 10px 0 10px;">
	  <div class="row">
	    <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
				<%= current_user.employee? ? link_to(reg.offering_name, reg.offering) : reg.offering.offering_name %>
				<div style="color:orange;"><%= "Hold begins: #{reg.hold_date.strftime('%D')}" if reg.hold_date %></div>
				<div style="color:red;"><%= "Ending: #{reg.end_date.strftime('%D')}" if reg.end_date && !(reg.switch_id) %></div>
				<div style="color:red;"><%= "Changing Classes: #{reg.end_date.strftime('%D')}" if reg.end_date && reg.switch_id %></div>
				<div style="color:green;"><%= "Starting: #{reg.start_date.strftime('%D')}" if reg.start_date && ( reg.status == 0 ) %></div>
				<div style="color:green;"><%= "Restarting: #{reg.restart_date.strftime('%D')}" if reg.restart_date && (reg.restart_date >= Date.today) %></div>
				</div>
			</div>
	  <div class="row">
	 		<div class='col-lg-4 col-md-4 col-sm-4 col-xs-4'>
	    	<div class="text-left" style="margin-bottom:7px;">
						<%= registration_status(reg).html_safe if current_user.employee? %>
					</div>
			  </div>
	    <div class='col-lg-4 col-md-4 col-sm-4 col-xs-4'>
	    	<div class="text-center">

					</div>
			  </div>
	    <div class='col-lg-4 col-md-4 col-sm-4 col-xs-4'>
	    	<% if current_user.employee? %>
		    	<div class="text-right" style="position:relative;">
		    		<%= link_to "javascript:void(0)", class: "registration_info_toggle", style: "position:relative;bottom:0;" do %>
		          <i class="fa fa-chevron-down fa-1x"	></i>
		        <% end %>
	 				</div>
					<% end %>
			  </div>
		  </div>
		</div>
	<% if current_user.employee? %>
			<div class="registration_info">
				<% if current_user.admin? %>
					<%unless reg.switch && reg.start_date < Date.today %>
		 		  <div class="row">
				 		<div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
					    <div class='text-center' style="margin-left:5px;">
					    	<div class="btn-group btn-group-sm">
								  <%= link_to "Switch", "javascript:void(0)", class: "btn switch btn-default", data: { registrationid: reg.id, offeringid: reg.offering_id } unless reg.end_date %>
								  <!-- Status 1 is active, which requires different actions. -->
								  <% if reg.status == 1 %>
								  	<%= link_to "Hold", "javascript:void(0)", class: "btn hold btn-warning", data: { registrationid: reg.id } unless reg.end_date %>
								  	<%= link_to "Drop", "javascript:void(0)", class: "btn drop btn-danger", data: { registrationid: reg.id, studentFirstName: student.first_name, offeringName: reg.offering_name } unless reg.end_date || !(reg.switch_id) %>
								  	<%= link_to "Cancel Class Change", url_for(action: 'cancel_drop', controller: 'registrations', registration_id: reg.id), class: "btn cancel_switch btn-danger", data: { confirm: "Are you sure you want to cancel this drop?" } if reg.end_date && reg.switch_id %>
								  	<%= link_to "Cancel Drop", url_for(action: 'cancel_drop', controller: 'registrations', registration_id: reg.id), class: "btn cancel_drop btn-danger", data: { confirm: "Are you sure you want to cancel this drop?" } if reg.end_date && !(reg.switch_id) %>
								  	<%= link_to "Cancel Hold", url_for(action: 'cancel_hold', controller: 'registrations', registration_id: reg.id), class: "btn cancel_drop btn-danger", data: { confirm: "Are you sure you want to cancel this drop?" } if reg.end_date && !(reg.switch_id) %>
								  <% else %>
								  <!-- This drop destroys the record since the class has never been attended. -->
								  	<button type="button" class="btn btn-warning">Hold</button>
										<%= link_to 'Destroy', reg, method: :delete, data: { confirm: 'This will remove any and all traces of this registration. Are you sure?' }, class: "btn btn-danger" %>
								  <% end %>
								</div>
				 		  </div>
			 		  </div>
		 		  </div>
					<% end %>
			  <% end %>
			  <br>
			  <div class="row">
		    <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
			    <div class='text-right'>
		 				<%= offering_binder_cover(reg.offering.course_id, reg.offering.id, student.id).html_safe %>
		 		  </div>
	 		  </div>
			  </div>
		  </div>
	  <% end %>
</div>