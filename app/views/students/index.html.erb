<h1>Listing students</h1>

<table class="table table-striped">
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Birth date</th>
    <th>Start date</th>
    <th>Offering</th>
    <th>Parent</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @students.each do |student| %>
  <tr>
    <td><%= student.first_name %></td>
    <td><%= student.last_name %></td>
    <td><%= student.birth_date.strftime("%m/%d/%Y") %></td>
    <td><%= student.start_date.strftime("%m/%d/%Y") %></td>
    <td><%= link_to student.offering.course.course_name, student.offering.course %></td>
    <td><%= link_to student.user.full_name, student.user %></td>
    <td><%= link_to 'Show', student %></td>
    <td><%= link_to 'Edit', edit_student_path(student) %></td>
    <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

