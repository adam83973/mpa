<% title "Students" %>

<h1><%= yield(:title)%></h1>

<h1><%= link_to 'New Student', new_student_path, class: "btn btn-success" %></h1>


<table id="students" class="display">
    <thead>
      <tr>
        <th>Id</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Birth date</th>
        <th>Start date</th>
        <th>Offering</th>
        <th>Parent</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
        <% @students.each do |student| %>
          <tr>
            <td><%= student.id %></td>
            <td><%= student.first_name %></td>
            <td><%= student.last_name %></td>
            <td><%= student.birth_date.strftime("%m/%d/%Y") %></td>
            <td><%= student.start_date.strftime("%m/%d/%Y") %></td>
            <td><%= link_to student.offering.offering_name, student.offering %></td>
            <td><%= link_to student.user.full_name, student.user %></td>
            <td><%= link_to 'Show', student %></td>
            <td><%= link_to 'Edit', edit_student_path(student) %></td>
            <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
    </tbody>
</table>