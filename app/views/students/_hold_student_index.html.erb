<% title "Inactive/On Hold Students" %>

<h1><%= yield(:title)%></h1>

<p>
<%= link_to "Active Students", students_path(:students => :active) %> |
<%= link_to "All Students", students_path(:students => :all) %>
</p>

<table id="inactivestudents" class="display">
    <thead>
      <tr>
        <th>Id</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Parent</th>
        <th>Parent Email</th>
        <th>Status</th>
        <th>Offerings</th>
        <th></th>
        <% if current_user.admin? %>
          <th></th>
          <th></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
        <% @inactive_students.each do |student| %>
          <tr>
            <td><%= student.id %></td>
            <td><%= student.first_name %></td>
            <td><%= student.last_name %></td>
            <% if student.user %>
               <td><%= link_to student.user.full_name, student.user %></td>
            <% else %>
               <td><em>add parent</em></td>
            <%end%>
            <% if student.user.email %>
               <td><%= student.user.email %></td>
            <% else %>
               <td><em>no email on file</em></td>
            <%end%>
            <% if student.status %>
               <td><%= student.status %></td>
            <% else %>
               <td><em>update student status</em></td>
            <%end%>
            <td>
              <% if student.offerings.any? %>
                <% student.offerings.each do |offering| %>
                  <%= offering.offering_name %>
                <% end %>
              <% else %>
                <em>Student not enrolled.</em>
              <% end %>
            </td>
            <td><%= link_to 'Show', student %></td>
            <% if current_user.admin? %>
              <td><%= link_to 'Edit', edit_student_path(student) %></td>
              <td><%= link_to "Delete", student, method: :delete, data: { confirm: "Are you sure you want to destroy #{student.first_name} ?" } %></td>
            <% end %>
          </tr>
        <% end %>
    </tbody>
</table>