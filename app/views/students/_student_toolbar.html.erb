<div class="pull-right">
  <%if ["Teacher", "Teaching Assistant", "Admin"].include?(current_user.role) %>
    <%= link_to "Edit Student", edit_student_path(@student),class: "m-btn red" %>

    <%= link_to "Redeem Credits", edit_student_path(@student), class: "m-btn blue" %>

    <%= link_to "Add Achievement", { :controller => "experience_points", :action => "new", :student => @student.id }, { :class => "m-btn purple" } %>

    <% if @first_offering %>
      <%= link_to "Print Briefcase Cover", { :controller => "binders", :action => "briefcase", :student => @student.id }, { :class => "m-btn green" } %>
    <% end %>

    <% if @second_offering %>
      <%= link_to "Print Binder Cover", { :controller => "binders", :action => "middleschool", :student => @student.id }, { :class => "m-btn green" } %>
    <% end %>
  <% end %>
</div>