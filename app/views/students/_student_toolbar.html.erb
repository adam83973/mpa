<div class="hidden-sm hidden-xs">
  <div class="pull-right">
    <ul class="nav ul-padding">
      <%if current_user.employee? %>
        <li>
          <%= link_to "Edit Student", edit_student_path(@student),class: "btn btn-default student_tool_button" %>
        </li>
        <li>
          <%= link_to "Redeem Credits", "#creditsModal", data: {toggle: :modal}, class: "btn btn-green student_tool_button"%>
        </li>
        <li>
          <%= link_to "Add Achievement", { :controller => "experience_points", :action => "new", :student => @student.id }, { :class => "btn btn-purple student_tool_button" } %>
        </li>
        <li>
          <%= link_to "Attended First Class", { :controller => "students", :action => "attended_first_class", :id => @student.id }, { :class => "btn btn-yellow student_tool_button" } if !(@student.attended_first_class) %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
