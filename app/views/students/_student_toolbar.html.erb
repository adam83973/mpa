      </li>
      <li>
        <%= link_to "Attended First Class", { :controller => "students", :action => "attended_first_class", :id => @student.id }, { :class => "btn btn-yellow student_tool_button" } if !(@student.attended_first_class) %>
      </li>
    <% end %>
  </ul>
</div>
