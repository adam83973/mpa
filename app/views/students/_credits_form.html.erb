<div class="text-center">
  <%= simple_form_for @transaction, html: { id: 'credits_form' } do |f| %>
    <%= f.error_notification %>
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-12 col-xs-12 text-center">
        <%= f.association :location, label: "Select a location.", label_method: :name, input_html: { id: "transaction_credits_location_id" }%>
        <%= f.association :product, label: "Select a product.", disabled: true, collection: [], label_method: :name, input_html: { class: "chosen", data: { credits: true }, id: "transaction_credits_product_id" } %>
        <%= f.input :process, as: :hidden, input_html: { value: 0 } %>
        <%= f.input :student_id, as: :hidden, :input_html => { value: @student.id } %>
        <%= f.input :user_id, as: :hidden, :input_html => { value: current_user.id } %>
      </div>
    </div>
    <br>
    <%= f.button :submit, "Spend Credits", class: "btn btn-success" %>
  <% end %>
  <br>
</div>
