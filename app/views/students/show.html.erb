<div class="row">
  <%= render 'student_stats' %>
</div>

<div class="row rank">
  <div class="span3">
    <%= render 'student_class_list' %><br />
    <p>
      <%= render 'shared/nav_buttons' %>
    </p>
  </div>

  <div class="span8 achievements">
    <%= render 'student_achievements' %><br />
    <%= render 'robotics_achievements' %>
  </div>
</div>
<span class="row">
  <%= render 'student_comment_feed'%>
</span>

<div id="creditsModal" class="modal hide fade" tabindex="-1" role="dialog" aria-    labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Redeem Credits.</h3>
  </div>

  <div class="modal-body">
    <center>
     <h3>How many credits are you spending?</h3>
     <%= @credits %>
     <%= simple_form_for :credits, url: 'update_credits', remote: true do |f| %>
       <%= f.error_notification %>
       <%= f.input :credits, label: false %>
       <%= f.input :id, as: :hidden, :input_html => { value: @student.id } %>
       <%= f.button :submit, class: "m-btn" %>
     <% end %>
     <br>
   </center>
 </div>
</div>
