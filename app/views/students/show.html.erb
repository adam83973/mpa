<div class="modal fade" id="registrationSwitchModal" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="newStudentUserModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Switch Classes</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <%= simple_form_for :switch, url: url_for(action: 'switch', controller: 'registrations') do |f| %>
              <%= f.input :student_id, as: :hidden, input_html: { value: @student.id } %>
              <%= f.input :registration_id, as: :hidden %>
              <%= f.input :offering_id, as: :select, collection: Offering.where(active: true).order("course_id ASC"), label_method: :offering_name,  input_html: { class: "chosen" } %>
              <%= f.input :date, as: :string,  input_html: { class: "datepicker" } %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <%= f.submit "Submit", class: "btn btn-lg btn-success pull-right", confirm: "This will end the current registration and create a new registration for the selected class. This registration will end on the specified date and a new one will begin on the same date." %>
            <% end %>
          </div>
        </div>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->