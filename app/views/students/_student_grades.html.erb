<h3>Mastery</h3>

<div class="accordion" id="accordion4">
  <div class="accordion-group square">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion4" href="#collapseThree">
        Grades: <%= @student.grades.count %>
      </a>
    </div>
    <div id="collapseThree" class="accordion-body collapse">
      <div class="accordion-inner">
        <div class="tscroll student-grades">
          <div class="a-achievements">
            <table class="table">
              <thead>
                <tr>
                  <td>Course</td>
                  <td>Standard</td>
                  <td>Lesson</td>
                  <td>Mastery</td>
                </tr>
              </thead>
              <tbody>
                <% @student.grades.order('updated_at DESC').each do |grade| %>
                <% if grade.score == 3 %>
                  <tr style='background-color:#339933;'>
                    <td style='color:white;'><%= grade.lesson.standard.course.name if grade.lesson.standard %></td>
                    <td style='color:white;'><%= grade.lesson.standard.name if grade.lesson.standard %></td>
                    <td style='color:white;'><%= grade.lesson.name %></td>
                    <td style='color:white;'><%= grade.score %></td>
                  </tr>
                <% elsif grade.score == 2 %>
                  <tr style='background-color:#ffff66;'>
                    <td><%= grade.lesson.standard.course.name if grade.lesson.standard %></td>
                    <td><%= grade.lesson.standard.name if grade.lesson.standard %></td>
                    <td><%= grade.lesson.name %></td>
                    <td><%= grade.score %></td>
                  </tr>
                <% else %>
                  <tr style='background-color:#cf342b;'>
                    <td style='color:white;'><%= grade.lesson.standard.course.name if grade.lesson.standard %></td>
                    <td style='color:white;'><%= grade.lesson.standard.name if grade.lesson.standard %></td>
                    <td style='color:white;'><%= grade.lesson.name %></td>
                    <td style='color:white;'><%= grade.score %></td>
                  </tr>
                <% end %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
