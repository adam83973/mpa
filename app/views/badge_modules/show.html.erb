<p>
  <b>Name:</b>
  <%= @badge_module.name %>
</p>

<p>
  <b>Badge category:</b>
  <%= @badge_module.badge_category.name %>
</p>

<% if @badge_module.badges %>
  <% badges_count = @badge_module.badges.count %>
  <% @badge_module.badges.order(:id).each_with_index do |badge, i| %>
    <% if i % 2 == 0 %>
      <div class="row">
    <% end %>
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
          <%= render 'badges/badge_card', b: badge %>
      </div>
    <% if i % 2 == 1 || i+1 == badges_count %>
      </div>
    <% end %>
  <% end %>
<% end %>
