<h1>Editing Experience Point</h1>

<div class="row">
  <div class="col-lg-6 col-mg-6 col-sm-12 col-xs-12">
    <%= simple_form_for(@experience_point) do |f| %>
      <%= f.error_notification %>
        <%= f.association :student, label_method: :full_name %>
        <%= f.association :experience %>
        <%= f.input :points %>
  </div>
  <div class="col-lg-6 col-mg-6 col-sm-12 col-xs-12">
        <%= f.input :comment, as: :text, :input_html => { :rows => 5 } %>
        <%= f.input :user_id, :as => :hidden, :input_html => { :value => "#{current_user.id}" } %>
  </div>
</div>
<div class="row">
  <div class="col-lg-12 col-mg-12 col-sm-12 col-xs-12">
      <%= f.button :submit, class: "btn btn-success pull-right" %>
    <% end %>
  </div>
</div>