<% title "#{@experience_point.points}xp - #{@experience_point.experience.name}"  %>
<div class="row">
  <div class="col-lg-6 col-md-6">
    <p>
      <strong>Experience:</strong>
      <%= @experience_point.experience.name %>
    </p>

    <p>
      <strong>Student:</strong>
      <%= @experience_point.student.full_name %>
    </p>

    <p>
      <strong>Points:</strong>
      <%= @experience_point.points %>
    </p>
    <% if current_user.employee? %>
    <p>
      <strong>Last Updated:</strong>
      <%= @experience_point.updated_at.in_time_zone('Eastern Time (US & Canada)').strftime("%A, %B %e, %l:%M %p") %>
    </p>
    <% end %>
    <% if @experience_point.comment? %>
      <p>
        <strong>Comment:</strong>
        <%= @experience_point.comment %>
      </p>
    <% end %>

    <p>
      <strong>Created By:</strong>
      <%= @experience_point.user ?  @experience_point.user.full_name : 'System Admin' %>
    </p>

    <% if @experience_point.attendance && current_user.employee? %>
      <p>
        <%= link_to "Attendance Record", @experience_point.attendance %>
      </p>
    <% end %>

    <%if current_user.teacher? || current_user.admin? %>
      <p>
        <%= link_to 'Edit', edit_experience_point_path(@experience_point), class: "m-btn" %> | <%= link_to 'Destroy', @experience_point, method: :delete, data: { confirm: 'Are you sure?' }, class: "m-btn red" %>
      </p>
    <% end %>
  </div>
</div>
