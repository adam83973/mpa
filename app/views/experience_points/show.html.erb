<p id="notice"><%= notice %></p>

<p>
  <b>Experience:</b>
  <%= @experience_point.experience.name %>
</p>

<p>
  <b>Student:</b>
  <%= @experience_point.student.full_name %>
</p>	

<p>
  <b>Points:</b>
  <%= @experience_point.points %>
</p>

<% if @experience_point.comment? %>
	<p>
	  <b>Comment:</b>
	  <%= @experience_point.comment %>
	</p>
<% end %>

<p>
  <b>Created By:</b>
  <%= @experience_point.user.full_name %>
</p>

<%= render 'shared/nav_buttons' %> 

<%if ["Teacher", "Teaching Assistant"].include?(current_user.role) || current_user.admin? %>
	<%= link_to 'Destroy', @experience_point, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
