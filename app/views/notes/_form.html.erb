<div class="row">
  <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
    <%= simple_form_for(@note) do |f| %>
      <%= f.error_notification %>

      <%= f.association :user, label_method: :full_name, input_html: { class: :chosen } %>
      <%= f.association :location, label_method: :name %>
      <%= f.input :action_date, as: :string, input_html: { id: "datepicker" } %>
      <%= f.input :content, input_html: { rows: 3 } %>
      <%= f.input :completed %>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
      <%= f.button :submit, class: "btn btn-lg btn-success pull-right" %>
    <% end %>
  </div>
</div>
