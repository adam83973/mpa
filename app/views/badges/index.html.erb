<% title "Badges" %>
<h1>All Badges</h1>
<div class="row">
  <div class="col-lg-12-col-md-12 col-sm-12 col-xs-12">
    <table id="datatable" class="display">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th></th>
          <% if current_user.admin? %>
            <th></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @badges.each do |badge| %>
          <tr>
            <td><%= badge.id %></td>
            <td><%= badge.name %></td>
            <td><%= link_to 'Show', badge, target: "_blank" %></td>
            <% if current_user.admin? %>
              <td><%= link_to 'Edit', edit_badge_path(badge), target: "_blank" %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
