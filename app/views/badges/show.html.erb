
<div class="row">
  <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 col-lg-offset-3 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
            <h1 style="margin-left:10px;margin-top:10px"><%= @badge.name %></h1>
          </div>
          <div style="padding-top:30px;" class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
            <%= link_to "Edit", edit_badge_path(@badge), class: "pull-right", style: "padding-right:15px;" if current_user.admin? %>
          </div>
        </div>
      </div>
      <div class="panel-body text-center">
        <p>
          <%= image_tag(@badge.image.url, size: "150x150") if @badge.image %>
          <%= link_to "Please add image.", edit_badge_path(@badge) unless @badge.image %>
        </p>

        <h3>
          <%= @badge.requirements %>
        </h3>
      </div>
    </div>
  </div>
</div>
