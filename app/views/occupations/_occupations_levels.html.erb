<ul style="list-style-type:none;">
  <% occupation.occupation_levels.order(:level).each do |level|  %>
  <li class="well" style="position:relative;">
    <% if level.level.to_i <= @student.current_level_by_occupation(occupation.title.downcase).to_i + 1 %>
      <div class="row">
        <div class="col-md-2">
          <div class="row">
            <div class="col-sm-12">
              <% if level.level.to_i <= @student.current_level_by_occupation(occupation.title.downcase).to_i %>
                <i style="color:#e7e63a;position:relative;top:0;" class="fa fa-star fa-3x pull-left"></i>
                <%= link_to "Redeem", "#", class: "btn btn-xs btn-primary hidden-lg hidden-md pull-right" if current_user.employee? %>
              <% else %>
                <i class="fa fa-star fa-3x pull-left" style="position:relative;top:0;"></i>
                <%= link_to "Redeem", "#", class: "btn btn-xs btn-primary hidden-lg hidden-md pull-right" if current_user.employee? %>
              <% end %>
            </div>
          </div>
          <div class="row hidden-sm hidden-xs">
            <div class="col-sm-12">
              <%= link_to "Redeem", "#", class: "btn btn-xs btn-primary", style: "margin:40px 0 0 0;" if current_user.employee? %>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <%= image_tag(level.image_url, size: "100x100") if level.image? %>
        </div>
        <div class="col-md-7">
          <h1 style="margin:5px 0 5px 0;">Level <%= level.level %></h1>
          XP: <%= level.points %></br>
          <strong>Reward:</strong> <%= level.rewards %>
        </div>
      </div>
    <% else %>
      <div class="row">
      `<div class="col-md-2">
        <div class="row">
          <div class="col-sm-12">
            <i class="fa fa-star fa-3x pull-left" style="position:relative;top:0;"></i>
            <%= link_to "Redeem", "#", class: "btn btn-xs btn-primary hidden-lg hidden-md pull-right" %>
          </div>
        </div>
          <div class="row hidden-sm hidden-xs">
            <div class="col-sm-12">
              <%= link_to "Redeem", "#", class: "btn btn-xs btn-primary", style: "margin:100px 0 0 0;" if current_user.employee? %>
            </div>
          </div>
      </div>`
        <div class="col-md-3">
          <%= image_tag(level.image_url, size: "100x100", class: "blur") if level.image? %>
        </div>
        <div class="col-md-7">
          <h1 style="margin:5px 0 5px 0;">Level <%= level.level %></h1>
          <h2 style="color:red;">Locked</h2>
          <p>You must level up to see whats in store for the next level...</p>
        </div>
      </div>
    <% end %>
  </li>
  <% end %>
</ul>
