<div class="row">
  <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
    <%= simple_form_for(@message) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :subject %>
        <%= f.input :content %>
        <%= f.assocation :user %>
        <%= f.input :status %>
        <%= f.input :recipient_id %>
        <%= f.input :read %>
        <%= f.input :important %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
