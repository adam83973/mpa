<h3>Payment Audit Report for Active Students</h3>
<div class="row">
	<div class="span12">
		<table class="table table-striped table-bordered table-condensed">
			<thead>
				<tr>
					<th>Student Name</th>
					<th>Parent Name</th>
					<th>Location</th>
					<th>Last Date Attended</th>
					<th>Last Bill Date</th>
					<th>Last Inv. Amount</th>
					<th>Pmt Status</th>
				</tr>
			</thead>
			<tbody>
				<% @active_students.each do |student| %>
				<tr>
					<td><%= link_to student.full_name, student, :target => "_blank" %></td>
					<td><%= link_to student.user.full_name, student.user, :target => "_blank" %></td>
					<td><%= student.locations[0].name if student.locations.any? %></td>
					<td><%= student.last_date_attended.updated_at.to_date().strftime("%b-%d-%y") if student.last_date_attended %></td>
					<% if student.user.infusion_id %>
						<td>
							<%= student.user.last_payment_infusion[0]["DateCreated"]["month"] if student.user.last_payment_infusion.any? && student.user.last_payment %>/
							<%= student.user.last_payment_infusion[0]["DateCreated"]["day"] if student.user.last_payment_infusion.any? && student.user.last_payment %>/
							<%= student.user.last_payment_infusion[0]["DateCreated"]["year"] if student.user.last_payment_infusion.any? && student.user.last_payment %>
						</td>
						<td><%= student.user.last_payment_infusion[0]["InvoiceTotal"] if student.user.last_payment_infusion.any? && student.user.last_payment %></td>
						<td><%= raw payment_status(student.user.last_payment) if student.user.last_payment_infusion.any? && student.user.last_payment %></td>
					<% else %>
						<td>No Infusion Id</td>
						<td>No Infusion Id</td>
						<td>No Infusion Id</td>
					<% end %>
				</tr>
				<% end %>
			</tbody>
		</table>

		<%= link_to 'Back', infusion_pages_home_path, class: 'm-btn m-btn-small' %>
		<br />
	</div>
</div>