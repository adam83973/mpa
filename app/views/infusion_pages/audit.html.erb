<h3>Payment Audit Report for Active Students</h3>
<div class="row">
	<div class="span12">
		<table class="table table-striped table-bordered table-condensed">
			<thead>
				<tr>
					<th>Parent Name</th>
					<th>Parent Status</th>
					<th>Active Students</th>
					<th>Active Subscriptions</th>
				</tr>
			</thead>
			<tbody>
				<% @parents_with_active_students.each do |parent| %>
				<tr>
					<td><%= link_to parent.full_name, parent, :target => "_blank" %></td>
					<td><%= user_status(parent) %></td>
					<td><%= parent.registrations.count %></td>
					<td><%= parent.subscription_count %><%# student.last_date_attended.updated_at.to_date().strftime("%b-%d-%y") if student.last_date_attended %></td>
				</tr>
				<% end %>
			</tbody>
		</table>

		<%= link_to 'Back', infusion_pages_home_path, class: 'm-btn m-btn-small' %>
		<br />
	</div>
</div>