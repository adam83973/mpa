<h3>Payment Audit Report for Active Students</h3>
<div class="row">
	<div class="span12">
		<table class="table table-striped table-bordered table-condensed">
			<thead>
				<tr>
					<th>Student Name</th>
					<th>Parent Name</th>
					<th>Location</th>
					<th>Last Date Attended</th>
					<th>Last Bill Date</th>
					<th>Last Pmt</th>
					<th>Pmt Status</th>
				</tr>
			</thead>
			<tbody>
				<% @active_students.each do |student| %>
				<tr>
					<td><%= link_to student.full_name, student %></td>
					<td><%= link_to student.user.full_name, student.user %></td>
					<td><%= student.locations[0].name %></td>
					<td><%= student.last_date_attended.updated_at.to_date().strftime("%b-%d-%y") if student.last_date_attended %></td>
					<% if student.user.infusion_id %>
						<td><%= student.user.last_payment[:pay_date] if student.user.last_payment[:pay_date] %></td>
						<td><%= number_to_currency(student.user.last_payment[:total_paid]) if student.user.last_payment[:pay_date] %></td>
						<td><%= raw student.user.last_payment[:status] if student.user.last_payment[:pay_date] %></td>
					<% else %>
						<td>N/A</td>
						<td>N/A</td>
						<td>N/A</td>
					<% end %>
				</tr>
				<% end %>
			</tbody>
		</table>

		<%= link_to 'Back', infusion_pages_home_path, class: 'm-btn m-btn-small' %>
		<br />
	</div>
</div>