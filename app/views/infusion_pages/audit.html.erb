<h3>Payment Audit Report for Active Students</h3>
<div class="row">
	<div class="span12">
		<table class="table table-striped table-bordered table-condensed">
			<thead>
				<tr>
					<th></th>
					<th>Parent Name</th>
					<th>Parent Status</th>
					<th>Active Students</th>
					<th>Active Subscriptions</th>
				</tr>
			</thead>
			<tfoot>
				<tr>
					<td></td>
					<td></td>
					<td></td>
					<td><%=  @parents_with_active_students.sum{|parent| parent.registrations.active.delete_if{ |reg| reg.switch == false }.count } %></td>
					<td><%=  @parents_with_active_students.sum(&:subscription_count) %></td>
				</tr>
			</tfoot>
			<tbody>
				<% @parents_with_active_students.each_with_index do |parent, i| %>
				<tr>
					<td><%= i + 1 %></td>
					<td><%= link_to parent.full_name, parent, :target => "_blank" %></td>
					<td><%= user_status(parent).html_safe %></td>
					<td><%= parent.registrations.active.delete_if{ |reg| reg.switch == false }.count %></td>
					<td><%= parent.subscription_count %><%# student.last_date_attended.updated_at.to_date().strftime("%b-%d-%y") if student.last_date_attended %></td>
				</tr>
				<% end %>
			</tbody>
		</table>

		<%= link_to 'Back', infusion_pages_home_path, class: 'm-btn m-btn-small' %>
		<br />
	</div>
</div>