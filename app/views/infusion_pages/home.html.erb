<h3>Search by Last Name</h3>
Enter first few letters of last name:
<%= form_tag({}, {:method => :get, class: 'form-search'}) do %>
<p>
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Search", :name => nil, class: 'btn' %>
</p>
<% end %>

<% unless @contacts.nil? %>
	<table class="table table-striped table-bordered table-condensed">
		<thead>
			<tr>
				<th>Person Type</th>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Email</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			<% @contacts.each do |i| %>
			<tr>
				<td><%= i["ContactType"] %></td>
				<td><%= i["FirstName"] %></td>
				<td><%= i["LastName"] %></td>
				<td><%= i["Email"] %></td>
				<td>
					<%= link_to 'Edit User', infusion_pages_edit_path(i.merge(ContactId: params[:Id])), class: 'btn btn-small' %>
					<%= link_to 'View Subscriptions', infusion_pages_subscription_path(i.merge(ContactId: params[:Id])), class: 'btn btn-small' %>

 					<%= link_to 'Delete', infusion_pages_delete_user_path(i), class: 'btn btn-small btn-danger' %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
<% end %>

<h3>Add a Contact</h3>
<%= form_tag({}, {method: :get, class: 'form-inline'}) do %>
<p>
	First Name <%= text_field_tag :FirstName, params[:FirstName] %>
	Last Name <%= text_field_tag :LastName, params[:LastName] %>
	<%= submit_tag "Add Contact", :name => nil, class: 'btn' %>
</p>
<% end %>