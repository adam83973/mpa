<table style="table-layout:fixed;" class="table table-striped table-bordered table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |i| %>
    <tr>
      <td><%= i["FirstName"] + " " + i["LastName"] %></td>
      <td style="width: 70px;overflow: hidden;text-overflow: ellipsis;white-space: nowrap;"><%= i["Email"] %></td>
      <td style="width: 30px;"><%= link_to "Add", "javascript:void(0)", data: { id: i["Id"] }, id: "infusionAddId" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<div>
  <p>Not found?</p>
  <%= button_to "Add to Infusionsoft", "javascript:void(0)", class: "btn btn-sm btn-primary pull-right", id: "infusionsoft_create_contact" %>
</div>
