<p id="notice"><%= notice %></p>

<h1>Listing Learning Plan Issues</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @learning_plan_issues.each do |learning_plan_issue| %>
      <tr>
        <td><%= learning_plan_issue.title %></td>
        <td><%= link_to 'Show', learning_plan_issue %></td>
        <td><%= link_to 'Edit', edit_learning_plan_issue_path(learning_plan_issue) %></td>
        <td><%= link_to 'Destroy', learning_plan_issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

