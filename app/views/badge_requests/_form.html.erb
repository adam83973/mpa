<%= simple_form_for(@badge_request) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :badge_id %>
    <%= f.input :student_id %>
    <%= f.input :parent_submission %>
    <%= f.input :approved %>
    <%= f.input :user_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
