<%= simple_form_for(@standard) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :input_html => { :class => 'span8' } %>
    <%= f.input :category, :input_html => { :class => 'span8' } %>
    <%= f.input :description, :input_html => { :rows => 8, :class => 'span8' } %>
    <%= f.association :course, label_method: :course_name, item_wrapper_class: 'inline', :input_html => { :class => 'span8' } %>
    <%= f.association :problems, label_method: :title, item_wrapper_class: 'inline', :input_html => { :class => 'span8' } %>
    <%= f.association :activities, label_method: :title, item_wrapper_class: 'inline', :input_html => { :class => 'span8' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
