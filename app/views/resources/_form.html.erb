<%= simple_form_for(@resource) do |f| %>
  <%= f.error_notification %>

  <div class="form-horizontal">
	<%= f.input :filename, label: "File Name" %>
    <%= image_tag(@resource.file_url(:thumb)) if @resource.file? %>
    <% if !@resource.file? %>
		<%= f.input :file, as: :file, label: "Upload File" %>
	<% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
