<header class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner nav-font">
    <div class = "container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to root_path, class: "brand" do %>
      <%= image_tag('MP-logo.png') %> Math Plus Academy
      <% end %>
      <div class="nav-collapse collapse">
        <nav>
          <ul class="nav pull-right ul-padding">

            <% if signed_in? %>

              <% if current_user.parent? %>
              <li id="fat-menu">
                <a href="http://www.mathplusacademy.com/book-appointment"> Schedule HW Help </a>
              </li>
              <li id="fat-menu">
                <a href="http://hq.mathplusacademy.com"> Math Plus HQ </a>
              </li>
              <% end %>

              <%= render 'layouts/nav_links' if current_user.teacher? || current_user.admin? %>

              <%= render 'layouts/admin_tasks' if current_user.admin? %>

              <%= render 'layouts/nav_dropdown' %>

            <li>
              <%= render 'shared/user_search' if current_user.employee? %>
            </li>

            <% else %>

              <li><%= link_to "Sign in", new_user_session_path %></li>

            <% end %>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</header>
