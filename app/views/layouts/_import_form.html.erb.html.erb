<div class="card">
  <div class="card-header">
    <h3 class="card-title"> Import <%= resource.klass.to_s.pluralize %></h3>
  </div>
  <div class="card-block">
    <%= form_tag "/#{resource.klass.downcase}/import", multipart: true do %>
      <%= file_field_tag :file %>
      <br>
      <%= submit_tag "Import", class: "btn btn-default" %>
    <% end %>
  </div>
</div>
