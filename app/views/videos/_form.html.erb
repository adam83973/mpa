<%= simple_form_for(@video) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :url %>
    <%= f.association :lesson, label_method: :title, selected: params[:lesson_id] %>
  </div>

    <%= f.submit "Add Video To Lesson", class: "m-btn" %>
  </div>
<% end %>
