<div class="row">
  <div class="col-sm-12">
    <h1 class="text-center">Welcome To Math Plus Online</h1>
    </div>
  </div>
</div>
<div class="row">
  <div class="offset-lg-4 offset-md-3 col-lg-4 col-md-6">
    <div class="card">
      <div class="card-header">
        <h3 class="mb-0 text-center">Continue to App</h3>
      </div>
      <div class="card-block">
        <%= simple_form_for :company, url: application_lookup_path, method: :get do |f| %>
          <%= f.input :name, label: false, wrapper: :vertical_input_group do %>
            <%= f.input_field :name, placeholder: 'your-location-url', class: "form-control", style: 'text-align:right' %>
            <span class="input-group-addon" id="basic-addon1">.mathplus.online</span>
          <% end %>
          <%= f.button :button, class: 'btn btn-success pull-right' do %>
            Continue <i class='fa fa-arrow-right'></i>
          <% end %>
        <% end %>
      </div>
      <div class="card-footer text-muted text-center">
        Need help finding your application? <%= link_to "Click Here", "#" %>
      </div>
    </div>
  </div>
</div>
