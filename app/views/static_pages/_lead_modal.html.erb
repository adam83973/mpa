<div class="modal fade" id="leadModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Add New Lead!</h4>
      </div>
      <div class="modal-body">
        <%= simple_form_for @lead,
        url: url_for( action: :create, controller: :leads ),
        method: :post,
        html: { id: 'new_lead'},
        remote: true do |f| %>
      <%= f.error_notification %>

      <div class="row">
        <div class="form-inputs">
          <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <%= f.input :first_name %>
            <%= f.input :last_name %>
            <%= f.input :phone %>
            <%= f.input :email %>
            <%= f.input :appointment_date, as: :string, input_html: { id: :datepicker } %>
          </div>
          <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <%= f.association :user, collection: User.where("role = ? AND active =?", "Admin", true), label_method: :full_name %>
            <%= f.association :location, label_method: :name %>
            <%= f.association :stage %>
            <%= f.input :student_information, input_html: { rows: 5 } %>
            <%= f.input :active, as: :hidden %>
          </div>
        </div>
      </div>
        <%= f.button :submit, "Add Lead!", class: "btn btn-success" %>
    <% end %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script type="text/javascript">
$( document ).ready(function() {
  $("#datepicker").datepicker({
  dateFormat: 'yy-mm-dd',
  changeMonth: true,
  changeYear: true
});
});
</script>