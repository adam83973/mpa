
<div class="row" hidden>
  <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
    <h1>Add Feature</h1>
  </div>
  <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1>Badge Request!</h1>
      </div>
      <div class="panel-body">
        <%= simple_form_for :badge_request, url: users_path do |f| %>
          <%= f.input :student_id, collection: @user.students, label_method: :full_name %>
          <%= f.input :badge_id, collection: Badge.all %>
          <%= f.submit "Submit", class: 'btn btn-lg btn-default' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Render each parent's student in an accordian view and their offering(s) -->
<% student_count = @user.students.count %>
<% @user.students.each_with_index do |student, i| %>
  <% if i % 2 == 0 %>
    <div class="row">
  <% end %>
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
      <div id="student-<%= student.id %>" class="panel panel-default parent-student-home" style="height:100%;">
        <div class="panel-heading">
          <div class="text-center">
            <%= image_tag(student.avatar.image_url, size: "75x75") if student.avatar %>
          </div>
          <h3 class="text-center"><%= link_to student.full_name, student %></h3>
        </div>
        <div class="panel-body">
          <p class="text-center"><u>Total Credits:</u> <%= student.credits %></p>
          <p class="text-center"><u>Total XP:</u> <%= student.xp_total %></p>
          <p style="height:50px;overflow:scroll;" class="text-center"><u>Recent comment:</u>
            "<%= student.last_assignment_xp ? student.last_assignment_xp.comment : "There are no comments on file." %>"
          </p>
        </div>
        <% if student.is_active_mathematician? %>
          <div class="panel-footer">

            <div class="row">
              <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                Assignments Last 90 Days
              </div>
            </div>

            <div class="row">
              <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 text-center">
                <h3>Perfect</h3>
                <h3 style="color:green;">
                  <%= student.homework_scores_last(90, 5) %>
                </h3>
              </div>
              <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 text-center">
                <h3>Complete</h3>
                <h3>
                  <%= student.homework_scores_last(90, 1) %>
                </h3>
              </div>
              <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 text-center">
                <h3 class="hidden-xs">Incomplete</h3>
                <h3 class="hidden-sm hidden-md hidden-lg">Inc.</h3>
                <h3 style="color:red;">
                  <%= student.homework_scores_last(90, 4) %>
                </h3>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% if i % 2 == 1 || i+1 == student_count %>
    </div>
  <% end %>
<% end %>
