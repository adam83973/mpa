<% if signed_in? %>
<%= render 'first_login_password' %>

<div id="results">
  <%= render 'shared/user_search_results' %>
</div>

  <%if current_user.employee? %>
    <div class="row">
      <div class="dashboard">
        <% if @new_students_today_location.empty? %>
          <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
            <h3 class="text-center">Today's Overview</h3>
          </div>
        <% else %>
          <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
            <h3 class="text-center">Today's Overview</h3>
            <div class="new_students">
              <% @new_students_today_location.order("start_date ASC").each do |student| %>
                  <% student.offerings.includes(:course, :location).each do |offering| %>
                    <p>
                      <%= link_to "#{student.full_name}", student %> -
                      <%= offering.offering_name_dashboard %>
                      <% if student.start_date && student.start_date < Date.today %>
                       <span style="color:red;">(<%= student.start_date.strftime('%m/%d/%Y') %>)</span>
                      <% elsif student.start_date >= Date.today %>
                       <span style="color:green;">(<%= student.start_date.strftime('%m/%d/%Y') %>)</span>
                      <% end %>
                      <span>
                        <%= offering_binder_cover(offering.course_id, offering.id, student.id).html_safe %>
                      </span>
                    </p>
                <% end %>
              <% end %>
              <% @restarting_students_today_location.order("start_date ASC").each do |student| %>
                  <% student.offerings.includes(:course, :location).each do |offering| %>
                    <p>
                      <%= link_to "#{student.full_name}", student %> -
                      <%= offering.offering_name_dashboard %>
                      <% if student.restart_date < Date.today %>
                       <span style="color:red;">(Restart:<%= student.restart_date.strftime('%m/%d/%Y') %>)</span>
                      <% elsif student.restart_date >= Date.today %>
                       <span style="color:green;">(Restart:<%= student.restart_date.strftime('%m/%d/%Y') %>)Restart</span>
                      <% end %>
                      <span>
                        <%= offering_binder_cover(offering.course_id, offering.id, student.id).html_safe %>
                      </span>
                    </p>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
        <%# render 'new_student_feed' %>

        <%# render 'on_hold' unless current_user.teacher? || ( @student_restart.empty? && @student_return.empty? ) %>

        <%= render 'action_notes' if current_user.admin? %>
      </div>
    </div>
    <% if current_user.admin? %>
      <%= render 'daily_schedule' %>
      <hr>
      <%= render 'lead_management' %>
    <% end %>

  <% end %>

  <%if current_user.teacher? %>

    <%= render 'teacher_offerings' %>

    <%= render 'activity_feed' %>

  <% end %>

  <% if current_user.parent? %>
    <%= render 'parent_students' %>
  <% end %>

<% else %>

  <%= render 'login_screen' %>

<% end %>
