<% if signed_in? %>
  <div class="row">
    <aside class="span3 user-info">

      <section>
         <%= render 'shared/user_info' %>
      </section>

      <%if ["Teacher", "Teaching Assistant", "Director", "Admin"].include?(current_user.role) %>

        <section>
          <%= render 'clock_in' %>
        </section>

        <section>
          <% if ["Admin", "Director"].include?(current_user.role) %>
            <%= render 'location_stats' %>
          <% end %>
        </section>

        <section>
          <%= render 'shared/user_search' %>
        </section>

      <% end %>
    </aside>

    <div class="span8">
      <div id="results"><%= render 'shared/user_search_results' %></div>

        <%if ["Teacher", "Teaching Assistant"].include?(current_user.role) %>

          <%= render 'teacher_offerings' %>

          <%= render 'attendance_grades_buttons' %>

          <%= render 'activity_feed' %>

        <% end %>

        <% if current_user.role == "Parent" %>

          <%= render 'parent_students' %>

        <% end %>

      </div>
    </div>

<% else %>

  <%= render 'login_screen' %>

<% end %>