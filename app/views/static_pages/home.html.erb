<% if signed_in? %>
<%= render 'first_login_password' %>

<div id="results">
  <%= render 'shared/user_search_results' %>
</div>

  <%if current_user.employee? %>
    <div class="row">
      <div class="dashboard">
        <%= render 'new_student_feed' unless @new_students_location.empty? %>

        <%= render 'on_hold' unless current_user.teacher? || ( @student_restart.empty? && @student_return.empty? ) %>

        <%= render 'action_notes' if current_user.admin? %>
      </div>
    </div>
    <% if current_user.admin? %>
      <hr>
      <%= render 'daily_schedule' %>
      <hr>
      <%= render 'lead_management' %>
    <% end %>

  <% end %>

  <%if current_user.teacher? %>

    <%= render 'teacher_offerings' %>

    <%= render 'activity_feed' %>

  <% end %>

  <% if current_user.parent? %>
    <%= render 'parent_students' %>
  <% end %>

<% else %>

  <%= render 'login_screen' %>

<% end %>
