<div class="row">
  <div id="student">
    <div class="studentinfo">
      <div class="row">
        <div class="col-lg-3 col-xs-12 studentname">
          <h2>Secret Student</h2>
          <div style="padding:0 25px 0 25px;">
            <div style="
              padding:20px 0 20px 0;
              margin:0 auto;
              width:218px;border-radius:50%;
              background-color:#D3EA91;"
              class="text-center">

              <%= image_tag('math_plus_icons/MATHPLUS-avatar-robot.png', size: "175x175") %>
            </div>
          </div>

          <div id="totalCredits" data-totalCredits="34">
            <h3>Credits: 34</h3>
          </div><!--/#totalCredits -->
          <div style="min-width:260px;min-height:40px;" class="hidden-md hidden-sm hidden-xs"></div>
        </div><!--/.col-lg-3 col-md-12 col-sm-12 col-xs-12 studentname hidden-sm hidden-xs -->

        <div class="student-occupations col-lg-9 col-xs-12">

            <!-- Mathematics student information -->
            <div class="col-lg-3 col-xs-12 ">
              <div class="text-center well well-sm" style="position:relative; z-index:2; margin:0;min-height:311px;">
                <h3 style="margin-bottom:20px;">Mathematician</h3>
                  <input
                    disabled
                    id="mathematician-dial" class="outside"
                    value="67"
                    data-level="2"
                    data-displayInput="false"
                  >
                  <%= image_tag('math_plus_icons/MATHPLUS-mathmetician-L02.png', size: "115x115", class: "inside")%>
                <h3 style="margin:10px 0 10px 0;">
                  2000xp
                </h3>
                <p style="margin:0;">
                  <%= link_to("#mathematicianModal", data: {toggle: :modal}) do %>
                   Can You Level Up?
                  <% end %>
                </p>
              </div><!--/.text-center col-lg-3 col-md-3 col-sm-12 col-xs-12 -->
            </div>


            <!-- Programming student information -->
            <div class="col-lg-3 col-xs-12 ">
              <div class="text-center well well-sm" style="position:relative; z-index:2; margin:0;min-height:311px;">
                <h3 style="margin-bottom:20px;">Programmer</h3>
                  <input
                    disabled
                    id="programmer-dial" class="outside"
                    value="67"
                    data-level="2"
                    data-displayInput="false"
                  >
                  <%= image_tag('math_plus_icons/MATHPLUS-programmer-L03.png', size: "115x115", class: "inside")%>
                <h3 style="margin:10px 0 10px 0;">
                  2000xp
                </h3>
                <p style="margin:0;">
                  <%= link_to("#programmerModal", data: {toggle: :modal}) do %>
                   Can You Level Up?
                  <% end %>
                </p>
              </div><!--/.text-center col-lg-3 col-md-3 col-sm-12 col-xs-12 -->
            </div>

              <div style="position:relative; z-index:2;" class="text-center col-lg-3 col-xs-12">
              </div>

            <div class="text-center hidden-sm hidden-xs hidden-md col-lg-3 col-xs-12 ">
              <div class="well well-sm">
                <h3 style="margin:0 0 10px;">Badges</h3>
                <p>
                  <span style="color:red;">You have no badges.</span>
                  Here's what it might look like if you did...
                </p>
                <div class="row">
                  <%= image_tag('example_badge1.png', size: '60x60') %>
                  <%= image_tag('example_badge2.png', size: '60x60') %>
                </div>
                <div style="margin:0 0 25px 0;" class="row">
                  <%= image_tag('example_badge3.png', size: '60x60') %>
                </div>
                <%= link_to "Find out how to earn more.", "javascript:void(0)", data: {toggle: "modal", target: "#comingSoon"}  %>
              </div>
            </div>

        </div><!--/.span9 -->

        <div class="modal fade" id="comingSoon" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="comingSoon" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Badges coming soon!</h4>
              </div>
              <div class="modal-body">
                <div class="row text-center">

                  <h1>Coming Soon!</h1>

                </div>
              </div>
            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->


      </div><!--/.row -->
    </div><!--/.studentinfo -->
  </div><!--/#student -->
</div>

