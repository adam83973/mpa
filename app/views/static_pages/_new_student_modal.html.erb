<div class="modal fade" id="newStudentModal" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="newStudentModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">New Student</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <%= simple_form_for @new_student, url: url_for(action: 'create_from_opportunity', controller: 'students', method: 'post'), remote: true do |f| %>
              <%= f.input :first_name, label: "First Name" %>
              <%= f.input :last_name, label: "Last Name" %>
              <%= f.input :credits, as: :hidden, input_html: { value: 1 } %>
              <%= f.input :opportunity_id, as: :hidden unless @opportunity %>
              <%= f.input :opportunity_id, as: :hidden, input_html: { value: @opportunity.id } if @opportunity %>
              <%= f.input :user_id, as: :hidden %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <%= f.button :submit, class: "btn btn-lg btn-success pull-right" %>
            <% end %>
          </div>
        </div>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->