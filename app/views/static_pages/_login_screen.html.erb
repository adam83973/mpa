<div class="welcomescreen">
  <h1>app.MPA</h1>

  <div class="row">
    <div class="col-lg-4 col-md-4 col-sm-10 col-xs-10">
      <%= simple_form_for(resource, :as => resource_name, :url => user_session_path) do |f| %>
        <%= f.input :email, :required => false, :autofocus => true %>
        <%= f.input :password, :required => false %>
        <%= f.input_field :remember_me, as: :boolean, inline_label: 'Remember me' if devise_mapping.rememberable? %>
        <%= f.button :submit, "Sign in", class: "btn btn-success" %>
        <br><br>
        <div class="home_screen_links">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
