<div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
  <div id="user_action_needed">
    <h3 class="text-center">Needs Action: <%= @user_action_needed.count %></h3>
    <div class="notes">
      <ul class="list-unstyled">
        <% @user_action_needed.each do |note| %>
          <li>
            <%= link_to note.notable do %>
              <div class="well well-sm">
                <p>
                  "<%= note.content %>"
                </p>
                <hr style="margin:0 0 10px 0;">
                <div class="row">
                  <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    <div class="checkbox" style="margin:0;">
                      <label>
                        <%= check_box_tag "complete", "#{note.id}" %> Completed
                      </label>
                    </div>
                  </div>
                  <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    <%= note.user.full_name%> (<%= note.created_at.strftime("%D")%>)
                  </div>
                </div>
            </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>