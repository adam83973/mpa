<h1>Events</h1>

<table class="table table-condensed table-bordered table-striped">
  <thead>
    <tr>
      <th></th>
      <th>
        Title
      </th>
      <th>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @workshops.each_with_index do |workshop, i| %>
    <tr>
      <td>
        <%= i %>
      </td>
      <td>
        <%= workshop['title'] %>
      </td>
      <td>
        <%= link_to "View Enrollment", event_enrollment_path(id: workshop['id']) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
