<%= simple_form_for(@registration) do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
      <%= f.association :student, label_method: :full_name, selected: params[:student_id], input_html: { class: 'chosen' } if params[:student_id] %>
      <%= f.association :student, label_method: :full_name, input_html: { class: 'chosen' } unless params[:student_id] %>
      <%= f.association :location, label_method: :name, input_html: { class: 'chosen' } %>
      <%= f.association :offering, label_method: :offering_name, collection: Offering.includes(:course, :location).where("active = ?", true).all(order: 'course_id'), input_html: { class: 'chosen' } %>
      <%= f.input :status, as: :select, collection: Registration::STATUSES.zip((0..4).to_a) %>
      <%= f.association :admin, label_method: :full_name, selected: current_user.id, collection: User.where("admin = ?", true), input_html: { class: 'chosen' } %>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
      <%= f.input :start_date, as: :string, input_html: { class: 'datepicker'} %>
      <%= f.input :end_date, as: :string, input_html: { class: 'datepicker'} %>
      <%= f.input :hold_date, as: :string, input_html: { class: 'datepicker'} %>
      <%= f.input :trial_date, as: :string, input_html: { class: 'datepicker'} %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <%= f.button :submit, class: "btn btn-large btn-success pull-right" %>
    </div>
  </div>
<% end %>
