<%= simple_form_for(@lead) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :phone %>
    <%= f.input :email %>
    <%= f.input :user_id %>
    <%= f.input :stage_id %>
    <%= f.input :student_information %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
