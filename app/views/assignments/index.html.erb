<p id="notice"><%= notice %></p>

<h1>Listing Assignments</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Score</th>
      <th>Corrected</th>
      <th>User</th>
      <th>Week</th>
      <th>Offering</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.student_id %></td>
        <td><%= assignment.score %></td>
        <td><%= assignment.corrected %></td>
        <td><%= assignment.user_id %></td>
        <td><%= assignment.week %></td>
        <td><%= assignment.offering_id %></td>
        <td><%= link_to 'Show', assignment %></td>
        <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
        <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

