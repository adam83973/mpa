<%= simple_form_for(@problem) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :desc %>
    <%= f.input :source %>
    <%= f.association :courses, label_method: :course_name, as: :check_boxes %>
    <%= f.association :strategies, label_method: :name, as: :check_boxes %>
    <%= f.input :answer %>
    <%= f.input :methods %>
    <%= f.input :variations %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
