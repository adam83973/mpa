<%= simple_form_for(@problem) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :desc, as: :text, :input_html => { :rows => 5 } %>
    <%= f.input :source %>
    <%= f.association :courses, label_method: :course_name, as: :check_boxes %>
    <%= f.association :strategies, label_method: :name, as: :check_boxes %>
    <%= f.input :remove_image, as: :boolean, label: 'Remove Image' if @problem.image? %>
    <%= image_tag(@problem.image_url(:thumb)) if @problem.image? %>
    <% if !@problem.image? %>
      <%= f.input :image, as: :file, label: "Upload Image" %>
      <%= f.input :remote_image_url, label: "Or Copy Image from URL" %>
    <% end %>
    <%= f.input :answer %>
    <%= f.input :methods %>
    <%= f.input :variations %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
