<div class="row">
  <div class="col-lg-4 col-md-4 col-sm-12 sol-xs-12">
    <%= simple_form_for(@problem) do |f| %>
      <%= f.error_notification %>
        <%= f.input :activity_type, collection: ['Game', 'Activity'], :selected => 'Game' %>
        <%= f.input :title %>
        <%= f.input :desc, label: 'Objective & Description', as: :text, :input_html => { :rows => 4 } %>
        <%= f.input :setup, label: 'Setup / Materials', as: :text, :input_html => { :rows => 4 } %>
  </div>
  <div class="col-lg-4 col-md-4 col-sm-12 sol-xs-12">
        <%= f.input :methods, label: 'Instructions / Guidelines', as: :text, :input_html => { :rows => 4 } %>
        <%= f.input :variations, as: :text, :input_html => { :rows => 4 } %>
        <%= f.association :courses, label_method: :name, as: :select, item_wrapper_class: 'inline', input_html: { class: "chosen" } %>
        <%= f.association :lessons, label_method: :name, item_wrapper_class: 'inline' %>
  </div>
  <div class="col-lg-4 col-md-4 col-sm-12 sol-xs-12">
        <%= f.association :resources, label_method: :filename, item_wrapper_class: 'inline' %>
        <%= f.input :source %>
        <%= f.input :remove_image, as: :boolean, label: 'Remove Image' if @problem.image? %>
        <%= image_tag(@problem.image_url(:thumb)) if @problem.image? %>
        <% if !@problem.image? %>
          <%= f.input :image, as: :file, label: "Upload Image" %>
          <%= f.input :remote_image_url, label: "Or Copy Image from URL" %>
        <% end %>
  </div>
</div>
<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 sol-xs-12">
        <%= f.button :submit, 'Create Activity / Game', class: 'btn btn-lg btn-success pull-right' %>
    <% end %>
  </div>
</div>
