<% if @problem.activity_type.downcase == 'problem' %>
  <%= render 'show_problem' %>
<% else %>
  <%= render 'show_activity' %>
<% end %>

<%= link_to 'Edit', edit_problem_path(@problem), class: 'm-btn' %>
<%= link_to 'Show All', problems_path, class: 'm-btn' %>
<%= link_to 'Destroy', @problem, method: :delete, data: { confirm: 'Are you sure?' }, class: 'm-btn red' %>