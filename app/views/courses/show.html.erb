<% if current_user.admin?%>
  <%= link_to 'Edit', edit_course_path(@course), class: 'btn btn-default pull-right' %>
<% end %>
<h2 style="margin-bottom:30px;">
  <%= @course.course_name %>
</h2>
<p>
  Grade: <%= @course.grade %>
</p>
<p style="margin-bottom:30px;">
 Student type: <%= @course.occupation.title.pluralize %>
</p>
<% if @course.id == 15 %>
  <div class="row" style="margin-bottom:40px;">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <%= link_to BadgeModule.find(1) do %>
        <%= image_tag 'scratch_banner.svg' %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <%= link_to BadgeModule.find(1) do %>
        <%= image_tag 'processing_banner.svg' %>
      <% end %>
    </div>
  </div>
<% end %>

<% unless @course.id == 15 %>
<div class="panel-group" id="accordion">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
          Click Here For <%= @course.course_name %> Lessons
        </a>
      </h4>
    </div>
    <div id="collapseOne" class="panel-collapse collapse">
      <div class="panel-body">
        <table class= "table table-striped table-hover table-bordered">
          <tr>
            <th align='center'>Week</th>
            <th align='center'>Lesson Name</th>
          </tr>
          <% @course.lessons.order(:week).each_with_index do |lesson, i| %>
            <tr>
              <td width='50' align='center'><%= i + 1 %></td>
              <td><%= link_to lesson.name, lesson, target: '_blank' %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
<% end %>
