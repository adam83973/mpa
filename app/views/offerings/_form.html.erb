<div class="row">
  <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
    <%= simple_form_for(@offering) do |f| %>
      <% if @offering.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@offering.errors.count, "error") %> prohibited this offering from being saved:</h2>

          <ul>
          <% @offering.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

        <%= f.association :course, label_method: :course_name %>
        <%= f.association :location %>
        <%= f.input :day, collection: Date::DAYNAMES %>
        <%= f.label :time %>
        <div class="form-inline">
          <%= f.input :time, :minute_step => 30, :ampm => true, label: false %>
          <br><br>
        </div>
        <%= f.input :classroom, collection: [ "A", "B", "C"] %>
        <%= f.label :teachers %>
        <%= f.association :users, collection: @all_teachers, label_method: :full_name, label: false, input_html: { class: "chosen"} %>
        <%= f.input :graduation_year %>
        <%= f.input :comments, input_html: { rows: 5 } %>
        <%= f.input :active, as: :boolean %>
        <%= f.input :hidden, as: :boolean %>
        <%= f.button :submit, class: "btn btn-lg btn-success" %>
      </div>
    <% end %>
  </div>
</div>
