<h2>Upcoming Trials</h2>
<table class='table table-striped table-hover table-sm table-bordered'>
  <thead>
    <tr>
      <th>Date</th>
      <th>Parent</th>
      <th>Student</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @upcomming_trials.each do |opportunity| %>
      <tr>
        <td><%= opportunity.trial_date.strftime('%A, %B %e') %></td>
        <td><%= opportunity.user ? opportunity.user.full_name : opportunity.parent_name %></td>
        <td><%= opportunity.student ? opportunity.student.full_name : opportunity.student_name %></td>
        <td><%= link_to "view", opportunity %></td>
      </tr>
    <% end %>
  </tbody>
</table>
