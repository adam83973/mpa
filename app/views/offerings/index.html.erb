<% title "Classes" %>

<h1><%= yield(:title)%></h1>

<p>
  <%= link_to 'New Class', new_offering_path, class: "btn btn-success" %>
</p>

<table id="offerings" class="display">
    <thead>
      <tr>
        <th>Course</th>
        <th>Location</th>
        <th>Day</th>
        <th>Time</th>
        <th>User</th>
        <th># Students</th>
        <th>Open Spots</th>
        <th></th>
        <% if signed_in? && current_user.try(:admin?) %>
              <th></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
        <% @offerings.each do |offering| %>
          <tr>
            <td><%= link_to offering.course.course_name, offering.course %></td>
            <td><%= link_to offering.location.name, offering.location %></td>
            <td><%= offering.day %></td>
            <td><%= offering.time.strftime("%I:%M %p") %></td>
            <td><%= link_to offering.user.full_name, offering.user %></td>
            <td><%= offering.students.count %></td>
            <td><%= 12 - offering.students.count %></td>
            <td><%= link_to 'Show', offering %></td>
            <% if signed_in? && current_user.try(:admin?) %>
              <td><%= link_to 'Edit', edit_offering_path(offering) %></td>
            <% end %>
          </tr>
        <% end %>
    </tbody>
</table>
<br />

<% if signed_in? && current_user.try(:admin?) %>
<h3> Import Classes</h3>
  <%= form_tag import_offerings_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import" %>
  <% end %>
<% end %>

