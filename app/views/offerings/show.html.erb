<div class="well well-lg" style="padding-bottom:55px;">
  <%= link_to 'Edit', edit_offering_path(@offering), class: 'btn btn-default pull-right', target: "_blank" if current_user.admin? %>
  <h2><%= @offering.offering_name %></h2> Offering Id:<%= @offering.id %>

  <p>
    <%= link_to "Email Parents", offering_path(format: :csv) if current_user.employee? %>
  </p>
   <h3>
    Teachers:
    <% if @offering.users.any? %>
      <% @offering.users.each do |teacher| %>
        <%= teacher.full_name if teacher.active? %>
      <% end %>
      <% else %>
        <em> no teachers assigned</em>
    <% end %>
  </h3>
  <%= link_to "#{@offering.name} Lessons", @offering.course, class: "btn btn-primary pull-right", style: 'margin-bottom:40px', target: "_blank" %>
</div>

<% if current_user.employee?%>
  <%= render 'offerings/roster' if @offering.students %>

  <h2>Upcoming Trials</h2>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Parent</th>
        <th>Student</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @upcomming_trials.each do |opportunity| %>
        <tr>
          <%= opportunity.trial_date.strftime('%A, %B %e') %>
        </tr>
        <tr>
          <%= opportunity.user ? opportunity.user.full_name : opportunity.parent_name %>
        </tr>
        <tr>
          <%= opportunity.student ? opportunity.student.full_name : opportunity.student_name %>
        </tr>
        <tr>
          <%= link_to "view", opportunity %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to "Check Capacity", "javascript:void(0)", class: "btn btn-primary", id: 'capacity_check', data: { id: @offering.id } %>

