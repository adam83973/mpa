<%= simple_form_for(@transaction) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :type %>
    <%= f.input :user_id %>
    <%= f.input :student_id %>
    <%= f.input :credits_redeemed %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
