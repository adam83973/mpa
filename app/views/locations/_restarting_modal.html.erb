<div class="modal fade" id="restartingModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Students Restarting Next 20</h4>
      </div>
      <div class="modal-body text-center">
        <table class="table table-striped">
      <thead>
        <tr>
          <th>Student Name</th>
          <th>Class</th>
        </tr>
      </thead>
      <tbody>
        <% @location.registrations.restarting.uniq.each do |registration| %>
          <tr>
            <td><%= registration.student.full_name %><td>
            <td>
              <%= registration.offering.offering_name + " " %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->