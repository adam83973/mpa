<h2>HW Help Appointments</h2>
<table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Parent</th>
        <th>Time</th>
        <th>Child</th>
        <th>Grade</th>
        <th>Reason</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
        <% appointments.each do |appointment| %>
          <tr>
            <td>
              <%= link_to appointment.user.full_name, appointment.user if appointment.user %>
            </td>
            <td>
              <%= appointment.time.in_time_zone('Eastern Time (US & Canada)').strftime("%I:%M %P") %>
            </td>
            <td>
              <%= appointment.hwHelpChild %>
            </td>
            <td>
              <%= appointment.hwHelpClass %>
            </td>
            <td>
              <%= appointment.hwHelpReason %>
            </td>
            <td>
              <%= link_to "Edit", edit_appointment_path(appointment) %>
            </td>
          </tr>
        <% end %>
    </tbody>
</table>
