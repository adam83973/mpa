<% title @location.name %>
<div class="row">
  <div class= "col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <%= render 'location_stats' if current_user && current_user.admin? %>

    <%= render 'location_schedule' %>
  </div>
</div>
<% if current_user && current_user.admin? %>
  <h2>This Week's Assessments</h2>
  <%= render 'assessment_appointments', appointments: @location_assessment_appointments %>

  <%= render 'weekly_trials', opportunities: @location_trials %>

  <%= render 'homework_help_appointments', appointments: @location_hw_help_appointments %>

  <div class="row">
    <div class= "col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <%= link_to "sample_student", sample_student_path, class: "btn btn-primary" %>
    </div>
  </div>

  <%= render 'adds_modal' %>

  <%= render 'restarting_modal' %>

  <%= render 'drops_modal' %>

  <%= render 'future_adds_modal' %>

  <% if @data %>
    <div class="row">
      <div class= "col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="text-center">
          <h1>Average Enrollment per Month</h1>
          <%= line_chart @data, @options %>
        </div>
      </div>
    </div>
  <% end %>

  <% if @location.technical_information %>
    <div class="row">
      <div class= "col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <h2>Technical Information</h2>
        <%= simple_format @location.technical_information %>
      </div>
    </div>
  <% end %>
<% end %>
