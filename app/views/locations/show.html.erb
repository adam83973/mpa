<div class="row">
  <div class= "col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <%= render 'location_stats' %>

    <%= render 'location_schedule' %>
  </div>
</div>

<table class="table table-striped">
    <thead>
      <tr>
        <th>Parent</th>
        <th>Time</th>
        <th>Child</th>
        <th>Grade</th>
        <th>Reason</th>
      </tr>
    </thead>
    <tbody>
        <% @location_appointments.each do |appointment| %>
          <tr>
            <td>
              <%= appointment.user.full_name %>
            </td>
            <td>
              <%= appointment.time %>
            </td>
            <td>
              <%= appointment.hwHelpChild %>
            </td>
            <td>
              <%= appointment.hwHelpClass %>
            </td>
            <td>
              <%= appointment.hwHelpReason %>
            </td>

          </tr>
        <% end %>
    </tbody>
</table>

<%= render 'adds_modal' %>

<%= render 'restarting_modal' %>

<%= render 'drops_modal' %>

<%= render 'future_adds_modal' %>