<div class="table-responsive">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Class</th>
        <th>Grade</th>
        <th>Day/Time</th>
        <th>Teacher</th>
        <th>Classroom</th>
        <th># Students</th>
        <th>Open Spots</th>
      </tr>
    </thead>
    <tbody>
      <% @location.active_offerings.includes(:users).order(:course_id).each do |offering| %>
      <tr>
        <td>
          <%= offering.course.course_name%><%= raw offering_capacity(offering)%>
        </td>
        <td><%= offering.course.grade if offering.course.grade %></td>
        <td><%= link_to "#{offering.day} / #{offering.time.strftime("%I:%M %p")}", offering %></td>
        <td>
          <% offering.users.each do |user| %>
            <%= teacher_name_by_role user %>
          <% end %>
        </td>
        <td>
          <%= offering.classroom %>
        </td>
        <td><%= roster_count offering %></td>
        <td>
          <%= open_spots offering %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
