<div class="modal fade" id="futureRestartsModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">All Future Restarts</h4>
      </div>
      <div class="modal-body text-center">
        <table class="table table-striped">
      <thead>
        <tr>
          <th>Student Name</th>
          <th>Class</th>
          <th>Restart Date</th>
        </tr>
      </thead>
      <tbody>
        <% future_restarts.order('restart_date ASC').each do |registration| %>
          <tr>
            <td>
              <%= link_to registration.student.full_name, registration.student %>
            <td>
            <td>
              <%= registration.offering.offering_name + " " %>
            </td>
            <td>
              <%= registration.restart_date.strftime("%D") %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
