<%= simple_form_for(@activity) do |f| %>
  <%= f.error_notification %>

  <div class="form-horizontal">
    <%= f.input :title %>
    <%= f.input :objective, label: 'Objective / Description', as: :text, :input_html => { :rows => 4 } %>
    <%= f.input :setup, label: 'Setup / Materials', as: :text, :input_html => { :rows => 4 } %>
    <%= f.input :content, label: 'Instructions / Guidelines', as: :text, :input_html => { :rows => 4 } %>
    <%= f.association :courses, label_method: :name, as: :check_boxes, item_wrapper_class: 'inline' %>
    <%= f.association :standards, label_method: :name, item_wrapper_class: 'inline' %>
    <%= f.association :resources, label_method: :filename, item_wrapper_class: 'inline' %>
    <%= f.input :variations, as: :text, :input_html => { :rows => 4 } %>
    <%= f.input :source %>
    <%= f.input :remove_image, as: :boolean, label: 'Remove Image' if @activity.image? %>
    <%= image_tag(@activity.image_url(:thumb)) if @activity.image? %>
    <% if !@activity.image? %>
      <%= f.input :image, as: :file, label: "Upload Image" %>
      <%= f.input :remote_image_url, label: "Or Copy Image from URL" %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
